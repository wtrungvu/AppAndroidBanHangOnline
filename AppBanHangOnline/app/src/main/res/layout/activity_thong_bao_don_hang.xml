<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ThongBaoDonHangActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarThongBaoDonHang"
        app:title="Thông báo đơn hàng"
        android:background="@drawable/custom_background"
        app:titleTextColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center">
        <ImageView
            android:layout_margin="15dp"
            android:id="@+id/imgSuccess"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/img_success" />
        <TextView
            android:id="@+id/textViewThongBaoDonHang"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="Đơn hàng đã được đặt thành công!"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="Nhân viên shop sẽ nhanh chóng liên hệ quý khách để xác nhận đơn hàng."
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/buttonTiepTucMuaHang"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:padding="10dp"
            android:text="Tiếp tục mua hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>