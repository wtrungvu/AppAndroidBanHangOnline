<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TimKiemSanPhamActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarTimKiemSanPham"
        android:background="@drawable/custom_background"
        app:titleTextColor="#000000"
        app:title="Tìm kiếm sản phẩm"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_background">

        <TextView
            android:id="@+id/textViewThongBao"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Xin lỗi, chúng tôi không thể tìm thấy sản phẩm!"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textViewTimKiem"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Bạn hãy nhập tên sản phẩm cần tìm kiếm ở phía trên!"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/progressBarSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/listViewSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </RelativeLayout>

</LinearLayout>